<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.glenshaw.glen.assignment_1.MainActivity"
    android:layout_height="match_parent">


    <GridLayout
        android:id="@+id/grdLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4">

        <LinearLayout
            android:id="@+id/linearLayoutA"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_row="0">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/birds5sm"
                android:layout_weight="1"
                android:background="@drawable/resdrawableimageview_selector"
                android:padding="1dp"
                android:onClick="clickBirds" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rep2sm"
                android:layout_weight="1"
                android:background="@drawable/resdrawableimageview_selector"
                android:padding="1dp"
                android:onClick="clickReptiles" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutB"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mammal5sm"
            android:background="@drawable/resdrawableimageview_selector"
            android:padding="1dp"
            android:onClick="clickMammals" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flora1sm"
            android:layout_weight="1"
            android:background="@drawable/resdrawableimageview_selector"
            android:padding="1dp"
            android:onClick="clickFlora" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutC"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayoutB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        android:layout_row="2"
        android:layout_column="0">

        <Button
            android:id="@+id/buttonLast"
            android:text="LAST"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickLast" />

        <Button
                android:id="@+id/buttonRandom"
                android:text="RANDOM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clickRandom" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutD"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0">

            <TextView
                android:id="@+id/textViewDeveloperName"
                android:text="Glen Shaw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:fontFamily="casual" />

            <TextView
                android:id="@+id/textViewClicksTotals"
                android:text="0"
                android:layout_width="match_parent"
                tools:fontFamily="casual"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>


    </GridLayout>


</RelativeLayout>
